<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empowering Quotes</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Additional custom CSS -->
    <link rel="stylesheet" href="/stylesheets/commonStyle.css">

</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Empowering Messages</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/"><i class="material-icons left">list</i> Assignments</a></li>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="/empowering"><i class="material-icons left">list</i> Assignments</a></li>
        </ul>
    </header>


    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="list">
            <h1>Quotes</h1>
            <tr>

                <button class="btn waves-effect waves-light" href="/empowering" >
                    <i class="material-icons right" ></i>
                    Generate a Random Quote:
                </button>
            
                                   <% var randomNum = Math.floor((Math.random() * qlist.length)); %>
                                    <td><%= qlist[randomNum].quoteName %></td>
                                </tr>
            <table>
                <thead>

                    <tr>
                        <th>Quote Name</th>
                        <th>Author</th>
                        <th>Theme Name</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>

                    

                    <% for (let i = 0; i < qlist.length; i++) { %>
                    <tr>
                        <td><%= qlist[i].quoteName %></td>
                        <td><%= qlist[i].author %></td>
                        <td><%= qlist[i].themeName %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href="/empowering/<%= qlist[i].quoteId %>">
                                <i class="material-icons right">edit</i>
                                Info/Edit
                            </a>
                            <a class="btn-small waves-effect waves-light red" href="/empowering/<%= qlist[i].quoteId %>/delete">
                                <i class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% } %>

                    
                        

                    
                    </div>
                </tbody>
                
            </table>
        </div>

        <div class="section" id="add">
            <h2>Add an assignment:</h2>
            <form id="addForm" method="post" action="/empowering"> <!-- default action is the page's URL --> 
                <div class="row">
                    <div class="input-field col s8">
                        <input type="text" id="quoteNameInput" name="quoteName" class="validate" data-length="32" required>
                        <label for="quoteNameInput">Quote Name (Text):</label>
                    </div>
                    <div class="input-field col s8">
                        <input type="text" id="authorInput" name="author" class="validate" data-length="32" required>
                        <label for="authorInput">Author Name:</label>
                    </div>
                    <div class="input-field col s6">
                        <select id="themeInput" name="themeName" required>
                            <option value="" disabled selected>Choose your theme</option>
                            <option value=1>Empowering</option>
                            <option value=2>Funny</option>
                            <option value=3>Love</option>
                        </select>
                        <label for="themeInput">Theme:</label>
                </div>
                </div>
               
                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>
    

    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>