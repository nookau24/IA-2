<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A Specific Quote</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>

    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo"><i class="material-icons left">school</i>Quote Manager</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
                    <li><a href="/empowering"><i class="material-icons left">list</i> Empowering</a></li>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
            <li><a href="/empowering"><i class="material-icons left">list</i> Empowering</a></li>
        </ul>
    </header>
    
    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="details">
            <h1>Textbook Assignment</h1>
            <table>
                <tr>
                    <th>Quote Name:</th>
                    <td><%=qdetail.quoteName%></td>
                </tr>
                <tr>
                    <th>Author:</th>
                    <td><%=qdetail.author%></td>
                </tr>
                <tr>
                    <th>Theme:</th>
                    <td><%=qdetail.themeName%></td>
                </tr>
            </table>
        </div>

        <div class="section" id="controls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="#edit">
                <i class="material-icons right">edit</i>
                Edit
            </a>
            <a class="btn-large waves-effect waves-light red right" href="/empowering/<%= qdetail.assignmentId %>/delete">
                <i class="material-icons right">delete</i>
                Delete
            </a>
        </div>


        <div class="modal" id="edit">

            <div class="modal-content">

                <h2>Edit item:</h2>
                <form id="updateForm" method="post" action="/empowering/<%= qdetail.quoteId %>">
                    <div class="row">
                        <div class="input-field col s8">
                            <input type="text" id="quoteInput" name="quoteName" class="validate" data-length="45" required value="<%=qdetail.quoteName%>">
                            <label for="quoteInput">Quote Name:</label>
                        </div>
                        <div class="input-field col s4">
                            <input type="text" id="authorInput" name="author" class="validate" data-length="45" required value="<%=qdetail.author%>">
                            <label for="authorInput">Author:</label>
                        </div>
    
                        <div class="input-field col s6">
                            <select type="number" id="themeInput" name="themeName" required>
                                <option value=1   <% if (qdetail.themeId == 1) { %> selected <% } %>> Empowering </option>
                                <option value=2   <% if (qdetail.themeId == 2) { %> selected <% } %>> Funny </option>
                                <option value=3   <% if (qdetail.themeId == 3) { %> selected <% } %>> Love </option>
                                <option value=4   <% if (qdetail.themeId == 4) { %> selected <% } %>> School </option>
                                <option value=5   <% if (qdetail.themeId == 5) { %> selected <% } %>> Existential </option>
                                <option value=6   <% if (qdetail.themeId == 6) { %> selected <% } %>> Seasonal </option>
                              </select>
                              <label for="themeInput">Theme:</label>
                        </div>
    
                    </div>
                </form>
                <!-- A section for the footer of the modal -->
                <div class="modal-footer">
                    <!-- Since the submit button is not within the form, it must have the form attribute specified-->
                    <button class="btn waves-effect waves-light " type="submit" form="updateForm">
                        <i class="material-icons right">send</i>
                        Submit
                    </button>
                    <button class="modal-close waves-effect waves-green btn-flat" >Never Mind</button>
                </div>
                
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script> M.AutoInit();</script>

</body>

</html>